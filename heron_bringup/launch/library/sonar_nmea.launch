<launch>
  <!-- single beam echo sounder -->
  <group ns="sbes">
    <!-- sonar serial comms -->
    <node pkg="nmea_comms" type="serial_node" name="nmea_sonar_serial_node">
      <param name="port" value="$(optenv HERON_SONAR_PORT /dev/clearpath/sonar)"/>
      <param name="baud" value="$(optenv HERON_SONAR_BAUD 4800)"/>
    </node>
  </group>
</launch>
